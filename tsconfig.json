{
  "compilerOptions": {
    "target": "es2020",
    "skipLibCheck": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "strict": true
  },
  "include": ["lib/**/*.js"],
  "exclude": ["node_modules"]
}
